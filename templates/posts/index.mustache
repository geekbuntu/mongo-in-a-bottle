{{> ../header }}

  <ul id="posts">
    {{#posts}}
      <li>{{> templates/posts/post}}</li>
    {{/posts}}
  </ul>

  <a id="create-new-post">Create new post</a>
  <form id="new-post" action="/posts" method="post">
    <label for="author">Author</label>
    <input type="text" name="author" id="author" />

    <label for="title">Title</label>
    <input type="text" name="title" id="title" />

    <label for="body">Body</label>
    <textarea name="body" id="body"></textarea>
    
    <input type="submit" />
    <a id="cancel-new-post">Cancel</a>
  </form>

{{> ../footer }}
